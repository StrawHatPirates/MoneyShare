<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tachys.moneyshare.activity.CreateExpense">

    <EditText
        android:id="@+id/enter_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Enter title" />

    <View
        android:id="@+id/separator1"
        android:background="@color/gray_separator"
        android:layout_width="fill_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/enter_title"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/payer_title"

        android:layout_below="@id/separator1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payers" />

    <LinearLayout
        android:id="@+id/payer_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/payer_title"
        android:orientation="vertical" />

    <View
        android:id="@+id/separator2"
        android:background="@color/gray_separator"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height="2dp"
        android:layout_below="@id/payer_layout"
        android:layout_centerVertical="true" />

    <TextView
        android:id="@+id/payee_title"
        android:layout_below="@id/separator2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Payees" />

    <LinearLayout
        android:id="@+id/payee_layout"
        android:layout_below="@id/payee_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


    </LinearLayout>

</RelativeLayout>
