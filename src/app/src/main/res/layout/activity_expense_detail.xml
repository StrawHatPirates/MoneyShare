<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.tachys.moneyshare.activity.ExpenseDetail"
    android:orientation="vertical">

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/detail_amt_cumulative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/separator1"
        android:background="@color/gray_separator"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height="2dp" />

    <TextView
        android:id="@+id/detail_payers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/payers" />

    <ListView
        android:id="@+id/detail_payer_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/separator2"
        android:background="@color/gray_separator"
        android:layout_width="fill_parent"
        android:layout_marginTop="5dp"
        android:layout_height="2dp" />

    <TextView
        android:id="@+id/detail_payees"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Payees" />

    <ListView
        android:id="@+id/detail_payee_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>
