<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tachys.moneyshare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.ExpenseActivity"
            android:label="@string/title_activity_main">

        </activity>
        <activity
            android:name=".activity.CreateExpense"
            android:label="@string/title_activity_create_expense">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tachys.moneyshare.activity.ExpenseActivity" />
        </activity>
        <activity
            android:name=".activity.ExpenseDetail"
            android:label="@string/title_activity_expense_detail" />
        <activity
            android:name=".activity.FlashScreen"
            android:label="@string/title_activity_flash_screen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.MoneyShareWelcome"
            android:label="@string/title_activity_money_share_welcome" />
    </application>

</manifest>
